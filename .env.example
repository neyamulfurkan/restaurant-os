# ============================================
# RestaurantOS Environment Variables
# ============================================
# Copy this file to .env.local for development
# For production (Vercel), set these in dashboard
# ============================================

# ============================================
# DATABASE - IMPORTANT
# ============================================
# Local Development: Use local PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/restaurant_dev"

# Production (Vercel): Use Supabase or other cloud PostgreSQL
# DATABASE_URL="postgresql://user:pass@db.xxx.supabase.co:5432/postgres"

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
# Local: http://localhost:3000
NEXTAUTH_URL="http://localhost:3000"

# Production: https://your-app.vercel.app
# NEXTAUTH_URL="https://your-app.vercel.app"

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="super-secret-key-change-this-in-production-minimum-32-characters-long"

# ============================================
# SUPABASE (Optional - for file storage in production)
# ============================================
# Only needed if deploying to Vercel/cloud
# Leave empty for local development (uses public/uploads)
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_NAME="RestaurantOS"

# Local Development
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Production
# NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# ============================================
# PAYMENT GATEWAYS (Optional)
# ============================================
# Stripe Test Keys (for development)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxx"
STRIPE_SECRET_KEY="sk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"

# PayPal
NEXT_PUBLIC_PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""

# ============================================
# AI / GROQ (Optional)
# ============================================
# Get free key from: https://console.groq.com
GROQ_API_KEY=""

# ============================================
# NOTIFICATIONS (Optional)
# ============================================
# Twilio
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# SendGrid
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL=""

# ============================================
# GOOGLE MAPS (Optional)
# ============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""